<%= render "devise/shared/error_messages", resource: resource %>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<div class = "card border shadow mt-4 mx-auto p-4" style="width:400px">
  <nav class="navbar navbar-dark bg-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="#">Sign up</a>
      <form class="d-flex float-end">
        <div class="dropdown">
          <%= f.select :role, ['Admin', 'Customer', 'Seller'], {}, {class:"btn btn-outline-success dropdown-toggle"}%>
        </div>
      </form>
    </div>
  </nav>
  <div class="form-floating my-3">
    <%= f.text_field :name, autofocus: true, placeholder: "name", class:"form-control" %>
    <%= f.label :name %>
  </div>

  <div class="form-floating my-3">
    <%= f.email_field :email, autocomplete: "email", placeholder: "email", class:"form-control" %>
    <%= f.label :email %>
  </div>

  <div class="form-floating my-3">
    <%= f.password_field :password, autocomplete: "new-password", placeholder: "password", class:"form-control" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
    <%= f.label :password %>
  </div>

  <div class="form-floating my-3">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "confirm-password", class:"form-control"  %>
    <%= f.label :password_confirmation %>
  </div>

  <div class="actions my-3">
    <%= f.submit "Sign up", class: "btn btn-success mt-2" %>
  </div>
<% end %>
<br>
<%= render "devise/shared/links" %>
</div>