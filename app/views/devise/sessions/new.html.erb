<div class = "card border shadow mt-4 mx-auto p-4" style="width:400px">

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    
    <div class="form-floating my-3">
      <%= f.email_field :email, autocomplete: "email", placeholder: "email", class:"form-control" %>
      <%= f.label :email %>
    </div>

    <div class="form-floating my-3">
      <%= f.password_field :password, autocomplete: "current-password", placeholder: "password", class: "form-control" %>
      <%= f.label :password %>
    </div>

    <div class="actions my-3">
      <%= f.submit "Log in", class: "btn btn-success mt-2"%>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>